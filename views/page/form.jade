extends ../layout

block scripts
    script(src='/public/js/formPage.js')

block content
    form(role='form', method='POST', action=postUrl)
        .row
            .col-md-6
                h3 XML
                .form-group#input-big-xml
                    textarea#big-xml.form-control(rows=25)
            .col-md-6
                h3 Config
                .checkbox
                    label
                        input(type='checkbox', name='checkbox1')
                        | First checkbox
                .checkbox
                    label
                        input(type='checkbox', name='checkbox1')
                        | Second checkbox
                .form-group
                    label(for='issuer-address') Address
                    input#issuer-address.form-control(type='text', name='address', value=address)

                h3 Files
                .form-group
                    input(type='file', name='file1')
                .form-group
                    input(type='file', name='file2')
                .form-group
                    input(type='file', name='file3')
                .form-group
                    input(type='file', name='file4')

        .row
            .col-md-12.center.offset-top
                button.btn.btn-success(type='submit') Submit


